// tsconfig.json - Contenido Correcto
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Opciones clave de compilaci√≥n y resoluci√≥n de m√≥dulos */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // üî• ESTO ES LO M√ÅS IMPORTANTE PARA RESOLVER TUS ERRORES
    "jsx": "react-jsx", 

    /* Opciones de Tipado Estricto (Recomendado) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}